/* 个人简介 */

.jobdetails .rede-personal {
    padding-top: 50rpx;
    padding-bottom: 15rpx;
    border-bottom: 1rpx solid #e5e5e5;
    box-sizing: border-box;
}

.jobdetails .rede-personal .personel-title {
    display: flex;
}

.jobdetails .rede-personal .duties {
    font-size: 28rpx;
    line-height: 50rpx;
    color: #4b4b4b;
}

.jobdetails .rede-personal .personel-title .title {
    font-size: 36rpx;
    color: #000;
    vertical-align: middle;
}

.jobdetails .rede-personal .personel-content {
    font-size: 28rpx;
    line-height: 50rpx;
    color: #4b4b4b;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    text-overflow: ellipsis;
    overflow: hidden;
}

.jobdetails .rede-personal .ellipsis {
    -webkit-line-clamp: 3;
    opacity: 0.75;
    /* padding-left: 22rpx; */
    box-sizing: border-box;
    line-height: 60rpx;
}

.jobdetails .rede-personal .unellipsis {
    -webkit-line-clamp: 0;
    opacity: 1;
    line-height: 60rpx;
    box-sizing: border-box;
}

.jobdetails .rede-personal .xianshiall {
    font-size: 28rpx;
    color: #3c9;
    text-align: right;
    padding-top: 10rpx;
    padding-right: 40rpx;
    box-sizing: border-box;
}
