.modal-container {
    background: rgba(29, 28, 28, 0.8);
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    z-index: 9999;
}

.modal-container .auth-content {
    width: 600rpx;
    height: 400rpx;
    background: #fff;
    position: absolute;
    top: 50%;
    left: 50%;
    border-radius: 4rpx;
    transform: translate(-50%, -50%);
}

.modal-container .auth-login-title {
    padding: 20rpx;
    text-align: center;
    color: rgb(100, 86, 3);
