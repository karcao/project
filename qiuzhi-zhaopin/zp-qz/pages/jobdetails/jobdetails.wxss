.preview {
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.7);
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 10;
}

.preview image {
    width: 80%;
    height:82%;
    position: fixed;
    top: 50rpx;
    left: 50%;
    margin-left: -40%;
    z-index: 10;
    border: 1px dashed #fff;
}

.preview .save {
    width: 50%;
    height: 70rpx;
    font-size:28rpx;
    line-height: 70rpx;
    position: fixed;
    bottom: 60rpx;
    left: 10%;
    background: #eac11d;
    color: #fff;
    border-radius: 44rpx;
    /* z-index: 15; */
}

.preview .nosave {
    width: 25%;
    height: 70rpx;
    font-size: 28rpx;
    color: #353535;
    line-height: 70rpx;
    position: fixed;
    bottom:60rpx;
    right: 10%;
    border-radius: 44rpx;
    background: rgb(194, 192, 192);
    z-index: 10;
}
