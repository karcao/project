.watch1-list{
    margin-top: 120rpx;
    width: 100%;
    background: #fff;
}
.watch1-list .list-tab{
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    border-bottom: 1rpx solid #d6d6d6;
    display: flex;
    justify-content: space-around;
}
.watch1-list .list-tab .tab-title{
    font-size: 30rpx;
    color: #000;
}
.watch1-list .list-tab .tab-title.active{
    font-size: 30rpx;
    color: #33cc99;
    padding-left:10rpx;
    padding-right:10rpx;
    box-sizing: border-box;
    border-bottom: 5rpx solid #33cc99;
    border-bottom-left-radius: 5rpx;
    border-bottom-right-radius: 5rpx;
}
.watch1-list .couponcontent{
    display: none;
}
.watch1-list .couponcontent .body{
    margin-top: 0;
}
.watch1-list .couponcontent.active{
    display: block;
}
.watch1-list .list-chat{
    display: flex;
    /* display: none; */
    width: 100%;
    height: 135rpx; 
    /* border: 1rpx solid red; */
    padding-left:36rpx;
    box-sizing: border-box;
    position: relative;
}
.watch1-list .list-chat .tips{
    z-index: 9;
    position: absolute;
    right: 100rpx;
    bottom: -230rpx;
    width: 170rpx;
    height: 250rpx;
    background: #fff;
    /* border: 1rpx solid red; */
    text-align: center;
    font-size: 36rpx;
    color: #000;
    line-height: 80rpx;
    box-shadow: #bebbbb 1rpx 7rpx 40rpx 1rpx;
}
.watch1-list .list-chat .chat-left{
    width: 100rpx;
    height: 100rpx;
    border-radius: 10rpx;
    margin-top: 18rpx;
    margin-right: 20rpx;
}
.watch1-list .list-chat .chat-left image{
    width: 100rpx;
    height: 100rpx;
    border-radius: 10rpx;
}
.watch1-list .list-chat .chat-right{
    width: 100%;
    height: 100%;
    padding-right: 36rpx;
    /* padding-left: 22rpx; */
    padding-top: 20rpx;
    box-sizing: border-box;
    border-bottom: 1rpx solid #e5e5e5;
}
.watch1-list .list-chat .chat-right .right-top{
    display: flex;
    justify-content: space-between;
    line-height: 50rpx;
}
.watch1-list .list-chat .chat-right .right-top .top-left{
    color: #000;
    font-size: 34rpx;
}
.watch1-list .list-chat .chat-right .right-top .top-right{
    color: #bfbfbf;
    font-size: 24rpx;
}
.watch1-list .list-chat .chat-right .right-bottom{
    color: #aaa;
    font-size: 28rpx;
}
