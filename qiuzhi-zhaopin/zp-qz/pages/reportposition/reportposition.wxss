page {
    background: #eee;
}

.reporter {
}

.reporter .report-title {
    font-size: 30rpx;
    color: #353535;
    line-height: 80rpx;
    padding-left: 30rpx;
    box-sizing: border-box;
}

.reporter .wxname {
    background: #fff;
    padding: 30rpx;
    box-sizing: border-box;
    /* text-align: center; */
    /* font-size: 30rpx; */
    /* color: #353535; */
}

.reporter .job-top{
    padding-bottom: 20rpx;
    box-sizing: border-box;
    /* border-bottom: 1rpx solid #e5e5e5; */
}
.reporter .job-top .top-top{
    display: flex;
    justify-content: space-between;
    margin-bottom: 10rpx;
}
.reporter .job-top .top-top .top-left{
    font-size: 40rpx;
    color: #000;
}
.reporter .job-top .top-top .top-right{
    color: #ff3333;
    font-size: 34rpx;
}
.reporter .job-top .top-bottom{
    color: #888888;
    font-size: 26rpx;
}
.reporter .job-top .top-bottom text{
    margin: 0 15rpx;
}

.reporter .description {
    background: #fff;
    padding: 30rpx;
    font-size: 30rpx;
    color: #888;
    box-sizing: border-box;
}

.reporter .description textarea {
    height: 170rpx;
}

.reporter .description .photo {
    display: flex;
    line-height: 115rpx;
}

.reporter .description .photo .photo-add {
    width: 115rpx;
    height: 115rpx;
    border: 1rpx solid #ccc;
    margin-right: 10rpx;
    text-align: center;
}

.reporter .description .photo .photo-add image {
    width: 56rpx;
    height: 56rpx;
    margin-top: 30rpx;
}

.reporter .description .photo .photo-photo {
    position: relative;
    width: 116rpx;
    height: 116rpx;
}

.reporter .description .photo .photo-photo .img {
    width: 116rpx;
    height: 116rpx;
}

.reporter .description .photo .photo-photo .img1 {
    position: absolute;
    right: 5rpx;
    top: 5rpx;
    width: 28rpx;
    height: 28rpx;
}

.reporter .btn {
    width: 690rpx;
    margin-top: 60rpx;
    background: #3c9;
    font-size: 36rpx;
    color: #fff;
}
