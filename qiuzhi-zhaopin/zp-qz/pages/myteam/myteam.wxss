page{
    height:100%;
}
.list{
    display: flex;
    height: 145rpx;
    /* border: 1rpx solid red; */
    padding-top: 20rpx;
    padding-left: 30rpx;
    box-sizing: border-box;
    position: relative;
}
.list .icon-icon{
    width: 10rpx;
    height: 10rpx;
    background: red;
    border-radius: 50%;
    position: absolute;
    left: 100rpx;
    top: 15rpx;
}
.list .tips{
    z-index: 9;
    position: absolute;
    right: 100rpx;
    bottom: -110rpx;
    width: 170rpx;
    /* height: 250rpx; */
    background: #fff;
    /* border: 1rpx solid red; */
    text-align: center;
    font-size: 34rpx;
    color: #000;
    line-height: 80rpx;
    box-shadow: #bebbbb 1rpx 7rpx 40rpx 1rpx;
}
.list .list-left{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}
.list .list-left image{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}
.list .list-right{
    /* display: flex; */
    /* justify-content: space-between; */
    width: 100%;
    height: 100%;
    border-bottom: 1rpx solid #e5e5e5;
    /* padding-right: 15rpx; */
    /* box-sizing: border-box; */
    position: relative;
}
.list .list-right .left-top{
    display: flex;
    justify-content: space-between;
    box-sizing: border-box;
    padding-right: 30rpx;
}
.list .list-right .left-top .top-left{
    display: flex;
    font-size: 32rpx;
    color: #353535;
}

.list .list-right .left-top .top-left .name{
    width: 80%;
    font-size: 34rpx;
    color: #000;
    margin-right: 20rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.list .list-right .left-top .top-left text{
    font-size: 26rpx;
    color: #aaa;
    line-height: 50rpx;
}
.list .list-right .left-top .top-right{
    font-size: 26rpx;
    color: #aaa;
    line-height:60rpx;
}
.list .list-right .left-bottom{
    justify-content: space-between;
    box-sizing: border-box;
    padding-right: 30rpx;
    font-size: 28rpx;
    display: flex;
    color: #aaa;
    width: 100%;
}
button{
    margin-top: 150rpx;
    border-radius: 15rpx;
    line-height: 100rpx;
    width: 690rpx;
    height: 100rpx;
    background: #33cc99;
    color: #fff;
    font-size: 34rpx;
}
button::after {
    border: 0; 
}