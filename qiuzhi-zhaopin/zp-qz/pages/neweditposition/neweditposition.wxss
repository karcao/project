.neweditposition {
    width: 100%;
    padding: 40rpx 30rpx 0 30rpx;
    box-sizing: border-box;
}

/* 职位名称 */

.neweditposition .positionname {
    position: relative;
    border-bottom: 1rpx solid rgba(204, 204, 204, 1);
    margin-bottom: 40rpx;
}

.neweditposition .positionname .position-title {
    font-size: 28rpx;
    font-family: HiraginoSansGB-W3;
    font-weight: normal;
    color: rgba(53, 53, 53, 1);
    /* line-height: 125px; */
}

.neweditposition .positionname .position-ipt {
    width: 80%;
    height: 50rpx;
    margin: 20rpx 0 40rpx 0;
    color: #353535;
    font-size: 32rpx;
}

.neweditposition .positionname image {
    position: absolute;
    width: 16rpx;
    height: 25rpx;
    right: 10rpx;
    top: 40rpx;
}

/* 三合一 */

.neweditposition .triple{
    display: flex;
    justify-content: center;
    border-bottom: 1rpx solid rgba(204, 204, 204, 1);
    margin-bottom: 40rpx;
    padding-bottom: 30rpx;
    box-sizing: border-box;
}

.neweditposition .triple .triple-triple {
    width: 33.33%;
    text-align: center;
    /* height: 80rpx; */
}

.neweditposition .triple .triple-triple .triple-title {
    font-size: 28rpx;
    font-family: HiraginoSansGB-W3;
    font-weight: normal;
    color: rgba(53, 53, 53, 1);
    margin-bottom: 10rpx;
}
.neweditposition .triple .triple-triple picker{
    width: 100%;
    height: 50rpx;
    /* line-height: 50rpx; */
}
.neweditposition .triple .triple-triple .picker{
    width: 100%;
    height: 50rpx;
    /* line-height: 50rpx; */
}
.neweditposition .triple .triple-triple .picker .qingxuanze{
    font-size:30rpx;
    color:rgba(178,178,178,1);
}
.neweditposition .triple .triple-triple .picker .text{
    width: 100%;
    white-space:nowrap;
    overflow:hidden;
    text-overflow:ellipsis;
    font-size:30rpx;
    color:#353535;
}
.neweditposition .triple .triple-education{
    border-left:1rpx solid rgba(204,204,204,1);
    border-right:1rpx solid rgba(204,204,204,1);
}
/* 职位描述 */
.neweditposition .jobdescription{
    position: relative;
    border-bottom: 1rpx solid rgba(204, 204, 204, 1);
    margin-bottom: 40rpx;
}
.neweditposition .jobdescription .position-title {
    font-size: 28rpx;
    font-family: HiraginoSansGB-W3;
    font-weight: normal;
    color: rgba(53, 53, 53, 1);
}
.neweditposition .jobdescription .work{
    width: 100%;
    height: 250rpx;
    padding: 30rpx;
    box-sizing: border-box;
    position: relative;
}
.neweditposition .jobdescription .work textarea{
    font-size: 30rpx;
    color: #353535;
    width: 100%;
    height: 170rpx;
    box-sizing: border-box;
}
.neweditposition .jobdescription .work .wordcount{
    font-size: 28rpx;
    color: #888;
    position: absolute;
    right: 30rpx;
    bottom: 20rpx;
}
.neweditposition .jobdescription .work .wordcount text{
    color: #33cc99;
}
